{
  "log": {
    "disabled": false,
    "level": "info",
    "output": "",
    "timestamp": true
  },
  "dns": {
    "servers": [
      {
        "tag": "cloudflare",
        "address": "tls://1.1.1.1"
      },
      {
        "tag": "local",
        "address": "tls://dns.nextdns.io",
        "detour": "direct"
      }
    ],
    "strategy": "prefer_ipv4"
  },
  "inbounds": [
    {
      "type": "tun",
      "stack": "gvisor",
      "inet4_address": "10.139.1.0/30",
      "auto_route": true,
      "sniff": true
    }
  ],
  "outbounds": [
    {
      "tag": "proxy",
      "type": "", // your proxy profile here
    },
    {
      "type": "direct",
      "tag": "direct"
    },
    {
      "type": "block",
      "tag": "block"
    },
    {
      "type": "dns",
      "tag": "dns-out"
    }
  ],
  "route": {
    "geosite": {
      "path": "/usr/local/share/sing-box/geosite.db"
    },
    "geoip": {
      "path": "/usr/local/share/sing-box/geoip.db"
    },
    "rules": [
      {
        "protocol": "dns",
        "outbound": "dns-out"
      },
      {
        "geosite": "category-ads-all",
        "outbound": "block"
      },
      {
        "geosite": "cn",
        "geoip": "cn",
        "outbound": "direct"
      },
      {
        "geosite": "private",
        "geoip": "private",
        "outbound": "direct"
      }
    ],
    "auto_detect_interface": true
  }
}
